<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/bule"
        />
    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="45dp"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="@drawable/search_back"
                />
        </LinearLayout>
        <EditText
            android:layout_centerInParent="true"
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_fz"
            android:textColorHint="@color/shenhui"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:textSize="@dimen/text_cs"
            android:layout_weight="1"
            android:textCursorDrawable="@drawable/edittext_cursor_bg"
            android:background="@drawable/edit_search_bg"
            />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_right"
                android:textColor="@color/text_zw"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_content"
                android:gravity="center"
                android:text="搜索"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="历史记录"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textColor="@color/text_zw"
            android:textSize="@dimen/text_center"
            android:layout_marginLeft="15dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/lin_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_del"
                android:layout_width="90px"
                android:padding="15px"
                android:layout_height="match_parent"
                android:src="@drawable/del"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="清除"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="@dimen/text_cs"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_height="0.5dp"
        android:background="@color/huise"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <wizrole.hosadmin.view.CustTextView
                android:id="@+id/list_histroy"
                android:orientation="horizontal"
                android:paddingRight="40px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingLeft="40px"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>