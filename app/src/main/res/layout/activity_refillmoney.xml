<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/bule"
        />
    <include
        layout="@layout/title_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">
            <EditText
                android:id="@+id/edit_refmoney_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:paddingLeft="5px"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:layout_marginRight="20px"
                android:hint="请输入设备编号"
                android:textCursorDrawable="@drawable/edittext_cursor_bg"
                android:textSize="@dimen/text_center"
                android:textColorHint="@color/text_fz"
                android:textColor="@color/text_fz"
                android:gravity="center"
                android:background="@drawable/select_strick_bg"
                />

            <TextView
                android:id="@+id/text_refmoney_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:textSize="@dimen/text_center"
                android:text="选择日期"
                android:textColor="@color/text_fz"
                android:gravity="center"
                android:background="@drawable/select_strick_bg"
                />
        <TextView
            android:id="@+id/text_refmoney_search"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:text="搜索"
            android:gravity="center"
            android:textColor="@color/bule"
            android:textSize="@dimen/text_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/danhui"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_rm_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ID"
            android:layout_weight="1"
            android:textSize="@dimen/text_cs"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_rm_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="姓名"
            android:layout_weight="1"
            android:textSize="@dimen/text_cs"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_rm_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="金额"
            android:textStyle="bold"
            android:textSize="@dimen/text_cs"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/huise"
        />
    <ListView
        android:id="@+id/list_remoney_view"
        android:divider="@null"
        android:scrollbarThumbVertical="@drawable/listview_scrollbar_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>