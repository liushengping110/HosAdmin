<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bule"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/img_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_menu_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/admin_logo"
                />
            <TextView
                android:id="@+id/text_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="登录"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/text_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="设置中心"
        android:gravity="center|left"
        android:paddingLeft="40px"
        android:textSize="45px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/danhui"
        />
    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="版本更新"
        android:textSize="45px"
        android:gravity="center|left"
        android:paddingLeft="40px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/danhui"
        />
    <TextView
        android:id="@+id/text_zhuxiao"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:text="注销账号"
        android:textSize="45px"
        android:gravity="center|left"
        android:paddingLeft="40px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/danhui"
        />
</LinearLayout>