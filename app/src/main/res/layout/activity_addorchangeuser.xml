<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/bule"
        />
    <include
        layout="@layout/title_back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:text="用户名："
                android:singleLine="true"
                />
            <EditText
                android:id="@+id/text_item_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/edittext_cursor_bg"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/edit_input_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_user_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:text="用户密码："
                android:singleLine="true"
                />
            <EditText
                android:id="@+id/text_item_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/edittext_cursor_bg"
                android:textSize="@dimen/text_center"
                android:layout_marginRight="10dp"
                android:paddingRight="20px"
                android:singleLine="true"
                android:background="@drawable/edit_input_bg"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:text="用户身份："
                android:singleLine="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/text_item_identity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_center"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:spinnerMode="dialog"
                    android:background="@drawable/edit_input_bg"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/turn_bottom"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:text="科室名称："
                android:singleLine="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/text_item_deparName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_cs"
                    android:paddingRight="20px"
                    android:textCursorDrawable="@drawable/edittext_cursor_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/edit_input_bg"
                    android:spinnerMode="dialog"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/turn_bottom"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:text="公司名称："
                android:singleLine="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/text_item_comName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_cs"
                    android:textCursorDrawable="@drawable/edittext_cursor_bg"
                    android:paddingRight="20px"
                    android:background="@drawable/edit_input_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:spinnerMode="dialog"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/turn_bottom"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>