<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="810px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:background="@drawable/dialog_exits_top_bg"
            >
            <TextView
                android:id="@+id/text_item_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content"
                android:layout_marginLeft="30px"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="状态码："
                    android:textSize="@dimen/text_cs"
                    />
                <TextView
                    android:id="@+id/text_monitior_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="描述："
                    android:textSize="@dimen/text_cs"
                    />
                <TextView
                    android:id="@+id/text_monitior_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="备注："
                    android:textSize="@dimen/text_cs"
                    />
                <TextView
                    android:id="@+id/text_monitior_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_cs"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
            android:id="@+id/lin_up"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/dialog_id_fail_lock"
                android:gravity="center"
                android:textSize="@dimen/text_content"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>