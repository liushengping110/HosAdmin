<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_lock"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_user_logo"
                android:layout_width="260px"
                android:layout_height="260px"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_item_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textStyle="bold"
                        />
                    <View
                        android:minWidth="40px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/text_item_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_center"
                        android:paddingRight="20px"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        android:text="科室名称："
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/text_item_deparName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:paddingRight="20px"
                        android:singleLine="true"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        android:text="公司名称："
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/text_item_comName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:paddingRight="20px"
                        android:gravity="center"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        android:text="最后登录时间："
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/text_item_loginTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_cs"
                        android:paddingRight="20px"
                        android:gravity="center"
                        android:singleLine="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/danhui"
        />
</LinearLayout>